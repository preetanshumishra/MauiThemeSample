<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiThemeSample.Views.ProfilePage"
    Title="Profile"
    BackgroundColor="{DynamicResource PageBackgroundColor}">
    
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Frame
            BackgroundColor="{DynamicResource PageBackgroundColor}"
            BorderColor="{DynamicResource BorderColor}"
            CornerRadius="10"
            Padding="20"
            HasShadow="False">
            <VerticalStackLayout Spacing="15">
                <Label
                    Text="User Profile"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="{DynamicResource PrimaryColor}"
                    HorizontalTextAlignment="Center" />
                
                <VerticalStackLayout Spacing="5">
                    <Label
                        Text="Name"
                        FontSize="14"
                        FontAttributes="Bold"
                        TextColor="{DynamicResource TextColor}" />
                    <Label
                        Text="{Binding UserName}"
                        FontSize="16"
                        TextColor="{DynamicResource TextSecondaryColor}" />
                </VerticalStackLayout>
                
                <VerticalStackLayout Spacing="5">
                    <Label
                        Text="Email"
                        FontSize="14"
                        FontAttributes="Bold"
                        TextColor="{DynamicResource TextColor}" />
                    <Label
                        Text="{Binding UserEmail}"
                        FontSize="14"
                        TextColor="{DynamicResource TextSecondaryColor}" />
                </VerticalStackLayout>
                
                <VerticalStackLayout Spacing="5">
                    <Label
                        Text="Bio"
                        FontSize="14"
                        FontAttributes="Bold"
                        TextColor="{DynamicResource TextColor}" />
                    <Label
                        Text="{Binding UserBio}"
                        FontSize="14"
                        TextColor="{DynamicResource TextSecondaryColor}"
                        LineBreakMode="WordWrap" />
                </VerticalStackLayout>
                
                <Button
                    Text="Go to Theme Selection"
                    BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                    TextColor="{DynamicResource ButtonTextColor}"
                    Padding="20,10"
                    CornerRadius="10"
                    Margin="0,20,0,0"
                    Command="{Binding GoToThemeSelectionCommand}" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
    
</ContentPage>