<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiThemeSample.Views.HomePage"
    Title="Home"
    BackgroundColor="{DynamicResource PageBackgroundColor}">
    
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label
            Text="Welcome to MAUI Theme Sample!"
            FontSize="24"
            FontAttributes="Bold"
            TextColor="{DynamicResource TextColor}"
            HorizontalTextAlignment="Center" />
        
        <Frame
            BackgroundColor="{DynamicResource PageBackgroundColor}"
            BorderColor="{DynamicResource BorderColor}"
            CornerRadius="10"
            Padding="15"
            HasShadow="False">
            <VerticalStackLayout Spacing="10">
                <Label
                    Text="Dynamic Theming System"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="{DynamicResource PrimaryColor}" />
                <Label
                    Text="This application demonstrates a dynamic theming system with 5 different color themes. Navigate to the Theme Selection page to change themes."
                    FontSize="14"
                    TextColor="{DynamicResource TextSecondaryColor}"
                    LineBreakMode="WordWrap" />
            </VerticalStackLayout>
        </Frame>
        
        <Button
            Text="Go to Theme Selection"
            BackgroundColor="{DynamicResource ButtonBackgroundColor}"
            TextColor="{DynamicResource ButtonTextColor}"
            Padding="20,10"
            CornerRadius="10"
            Command="{Binding GoToThemeSelectionCommand}" />
    </VerticalStackLayout>
    
</ContentPage>